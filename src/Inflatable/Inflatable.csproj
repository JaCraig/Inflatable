<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <BuildNumber Condition=" '$(APPVEYOR_BUILD_NUMBER)' != '' ">$(APPVEYOR_BUILD_NUMBER)</BuildNumber>
    <!-- for AppVeyor -->
    <BuildNumber Condition=" '$(BUILD_NUMBER)' != '' ">$(BUILD_NUMBER)</BuildNumber>
    <!-- for Team City -->
    <BuildNumber Condition=" '$(BuildNumber)' == '' ">0</BuildNumber>
    <!-- if not set -->
    <Description>Inflatable is a simple ORM.</Description>
    <AssemblyTitle>Inflatable ORM</AssemblyTitle>
    <Authors>James Craig</Authors>
    <TargetFramework>netstandard1.6</TargetFramework>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <AssemblyName>Inflatable</AssemblyName>
    <PackageId>Inflatable</PackageId>
    <PackageTags>ORM;SQL</PackageTags>
    <PackageProjectUrl>https://github.com/JaCraig/Inflatable</PackageProjectUrl>
    <PackageLicenseUrl>https://github.com/JaCraig/Inflatable/blob/master/LICENSE</PackageLicenseUrl>
    <NetStandardImplicitPackageVersion>1.6.1</NetStandardImplicitPackageVersion>
    <PackageTargetFallback>$(PackageTargetFallback);dnxcore50</PackageTargetFallback>
    <GenerateAssemblyConfigurationAttribute>false</GenerateAssemblyConfigurationAttribute>
    <GenerateAssemblyCompanyAttribute>false</GenerateAssemblyCompanyAttribute>
    <GenerateAssemblyProductAttribute>false</GenerateAssemblyProductAttribute>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Version>1.0.$(BuildNumber)</Version>
  </PropertyGroup>

  <ItemGroup>
    <None Include="Enums\SchemaGeneration.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="FileCurator" Version="1.1.18" />
    <PackageReference Include="Holmes" Version="1.0.10" />
    <PackageReference Include="Serilog" Version="2.5.0" />
    <PackageReference Include="SQLHelper.DB" Version="1.0.44" />
    <PackageReference Include="Data.Modeler" Version="1.0.27" />
    <PackageReference Include="System.Linq.Queryable" Version="4.3.0" />
    <PackageReference Include="Valkyrie" Version="1.0.6" />
    <PackageReference Include="Mirage" Version="1.0.10" />
    <PackageReference Include="Aspectus" Version="2.0.22" />
    <PackageReference Include="BigBook" Version="1.0.33" />
  </ItemGroup>

</Project>
