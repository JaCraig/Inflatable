<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <BuildNumber Condition=" '$(APPVEYOR_BUILD_NUMBER)' != '' ">$(APPVEYOR_BUILD_NUMBER)</BuildNumber>
    <!-- for AppVeyor -->
    <BuildNumber Condition=" '$(BUILD_NUMBER)' != '' ">$(BUILD_NUMBER)</BuildNumber>
    <!-- for Team City -->
    <BuildNumber Condition=" '$(BuildNumber)' == '' ">0</BuildNumber>
    <!-- if not set -->
    <Description>Inflatable is a simple ORM.</Description>
    <AssemblyTitle>Inflatable ORM</AssemblyTitle>
    <Authors>James Craig</Authors>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <AssemblyName>Inflatable</AssemblyName>
    <PackageId>Inflatable</PackageId>
    <PackageTags>ORM;SQL</PackageTags>
    <PackageProjectUrl>https://github.com/JaCraig/Inflatable</PackageProjectUrl>
    <PackageLicenseUrl>https://github.com/JaCraig/Inflatable/blob/master/LICENSE</PackageLicenseUrl>
    <GenerateAssemblyConfigurationAttribute>false</GenerateAssemblyConfigurationAttribute>
    <GenerateAssemblyCompanyAttribute>false</GenerateAssemblyCompanyAttribute>
    <GenerateAssemblyProductAttribute>false</GenerateAssemblyProductAttribute>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Version>2.0.$(BuildNumber)</Version>
  </PropertyGroup>

  <ItemGroup>
    <None Include="Enums\SchemaGeneration.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="FileCurator" Version="2.0.6" />
    <PackageReference Include="Holmes" Version="2.0.4" />
    <PackageReference Include="Serilog" Version="2.7.1" />
    <PackageReference Include="SQLHelper.DB" Version="2.0.6" />
    <PackageReference Include="Data.Modeler" Version="2.0.4" />
    <PackageReference Include="System.Linq.Queryable" Version="4.3.0" />
    <PackageReference Include="Valkyrie" Version="2.0.2" />
    <PackageReference Include="Mirage" Version="2.0.2" />
    <PackageReference Include="Aspectus" Version="3.1.0" />
    <PackageReference Include="BigBook" Version="2.1.3" />
  </ItemGroup>

</Project>
